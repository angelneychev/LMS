@page "/hr/register"
@attribute [Authorize(Roles = "Human Resources")]
@inject IAuthorizeApi AuthorizeApi
@inject ICompanyApi CompanyApi
@inject IDepartmentApi DepartmentApi
@inject NavigationManager NavigationManager

<h3 class="mb-4">Register Employee</h3>

<EditForm Model="RegisterUserAndEmployeeParameters" OnValidSubmit="OnValidSubmit" class="needs-validation">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="username">Email:</label>
        <InputText id="username" class="form-control" @bind-Value="RegisterUserAndEmployeeParameters.UserName" />
    </div>

    <div class="mb-3">
        <label for="password">Password:</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="RegisterUserAndEmployeeParameters.Password" />
    </div>

    <div class="mb-3">
        <label for="passwordConfirm">Confirm Password:</label>
        <InputText id="passwordConfirm" type="password" class="form-control" @bind-Value="RegisterUserAndEmployeeParameters.PasswordConfirm" />
    </div>

    <div class="mb-3">
        <label for="uniqueCitizenshipNumber">Unique Citizenship Number:</label>
        <InputText id="uniqueCitizenshipNumber" class="form-control" @bind-Value="RegisterUserAndEmployeeParameters.UniqueCitizenshipNumber" />
    </div>

    <div class="mb-3">
        <label for="fullName">Full Name:</label>
        <InputText id="fullName" class="form-control" @bind-Value="RegisterUserAndEmployeeParameters.FullName" />
    </div>

    <div class="mb-3">
        <label for="phoneNumber">Phone Number:</label>
        <InputText id="phoneNumber" class="form-control" @bind-Value="RegisterUserAndEmployeeParameters.PhoneNumber" />
    </div>

    <div class="mb-3">
        <label for="role">Role:</label>
        <InputSelect id="role" class="form-select" @bind-Value="RegisterUserAndEmployeeParameters.Role">
            <option value="">Select a role</option>
            @foreach (var role in roles)
            {
                <option value="@role.Key">@role.Value</option>
            }
        </InputSelect>
    </div>

    <div class="mb-3">
        <label for="companyId">Company:</label>
        <InputSelect id="companyId" class="form-select" @bind-Value="RegisterUserAndEmployeeParameters.CompanyId">
            <option value="">Select a company</option>
            @foreach (var company in companies)
            {
                <option value="@company.Key">@company.Value</option>
            }
        </InputSelect>
    </div>

    <div class="mb-3">
        <label for="departmentId">Department:</label>
        <InputSelect id="departmentId" class="form-select" @bind-Value="RegisterUserAndEmployeeParameters.DepartmentId">
            <option value="">Select a department</option>
            @foreach (var department in departments)
            {
                <option value="@department.Key">@department.Value</option>
            }
        </InputSelect>
    </div>

    <div class="mb-3">
        <label for="position">Position:</label>
        <InputText id="position" class="form-control" @bind-Value="RegisterUserAndEmployeeParameters.Position" />
    </div>
    <div class="mb-3">
        <label for="hiredDate">Hired Date:</label>
        <InputDate id="hiredDate" class="form-control" @bind-Value="RegisterUserAndEmployeeParameters.HiredDate" />
    </div>

    <p class="">@message</p>
    <button type="submit" class="btn btn-primary">Register</button>
</EditForm>

@code {
    private string? message;
    private RegisterUserAndEmployeeParameters RegisterUserAndEmployeeParameters { get; set; } = new RegisterUserAndEmployeeParameters();
    private IEnumerable<KeyValuePair<string, string>> roles = new List<KeyValuePair<string, string>>();
    private IEnumerable<KeyValuePair<string, string>> companies = new List<KeyValuePair<string, string>>();
    private IEnumerable<KeyValuePair<string, string>> departments = new List<KeyValuePair<string, string>>();
    
    protected override async Task OnInitializedAsync()
    {
        roles = await AuthorizeApi.GetAllRolesAsKeyValuePairs();
        companies = await CompanyApi.GetAllCompaniesAsKeyValuePairs();
        departments = await DepartmentApi.GetAllDepartmentsAsKeyValuePairs();
    }

    private async Task OnValidSubmit()
    {
        if (RegisterUserAndEmployeeParameters.Role == "Human Resources")
        {
            // Show error message or handle accordingly
            return;
        }
        var response = await AuthorizeApi.RegisterUserAndEmployee(RegisterUserAndEmployeeParameters);
        if (response.IsSuccessStatusCode)
        {
            message = "Employee registered successfully.";
            RegisterUserAndEmployeeParameters = new RegisterUserAndEmployeeParameters(); // Clear the form
            StateHasChanged(); // Force the page to refresh and show the message
        }
        else
        {
            message = "Error registering the employee.";
            StateHasChanged(); // Force the page to refresh and show the error message
        }
    }
}